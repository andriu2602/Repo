pipeline {
    agent any
	
	tools {nodejs "Node"}
	
    stages {
		
		stage('conection') {
		steps{
		git credentialsId: '166f5d56-43fd-4c19-9999-6720de690b1e', url: 'https://github.com/andriu2602/HW_nodejs.git'
		}
		}
        
		stage('deploy'){
			steps{
				bat 'npm start'
				sleep time: 2, unit: 'MINUTES'
			
			}
		
		
		}
		stage('stop'){
			steps{
				bat 'npm stop'
				
			
			}
		
		
		}
		
    }
}